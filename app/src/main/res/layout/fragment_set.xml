<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_border"
   >

    <!--top 60/540= 0.111-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/w120"
        android:layout_height="@dimen/w120"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        app:layout_marginTopPercent="11.1%" />

    <!--top 25/540= 0.046-->
    <TextView
        android:id="@+id/version_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="@string/app_version"
        android:textColor="@color/white"
        android:textSize="@dimen/w36"
        app:layout_marginTopPercent="4.6%" />

    <TextView
        android:id="@+id/user_protocol_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version_tv"
        android:layout_centerHorizontal="true"
        android:text="@string/user_protocol"
        android:textColor="@color/pink"
        android:textSize="@dimen/w36"
        app:layout_marginTopPercent="4.6%" />

    <!--top 40/540= 0.074-->
    <LinearLayout
        android:id="@+id/service_phone_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_protocol_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        app:layout_marginTopPercent="7.4%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/service_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/w36" />

        <TextView
            android:id="@+id/service_phone_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100-100-100"
            android:textColor="@color/white"
            android:textSize="@dimen/w36" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/version_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_phone_ll"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        app:layout_marginTopPercent="4.6%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/version_info"
            android:textColor="@color/white"
            android:textSize="@dimen/w36" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已是最新版本"
            android:textColor="@color/white"
            android:textSize="@dimen/w36" />
    </LinearLayout>

    <View
        android:id="@+id/ling_view"
        android:layout_width="620dp"
        android:layout_height="@dimen/h4"
        android:layout_below="@+id/version_ll"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_line"
        app:layout_marginTopPercent="4.6%" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ling_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_marginTopPercent="4.6%">

        <Button
            android:id="@+id/cut_version_bt"
            android:layout_width="@dimen/h300"
            android:layout_height="@dimen/w92"
            android:background="@drawable/wallet_btn_withdraw"
            android:gravity="center"
            android:padding="@dimen/w4"
            android:text="@string/cut_personal_s"
            android:textSize="@dimen/w36" />
        <Button
            android:id="@+id/modify_pwd_bt"
            android:layout_width="@dimen/h300"
            android:layout_height="@dimen/w92"
            android:background="@drawable/wallet_btn_withdraw"
            android:gravity="center"
            android:padding="@dimen/w4"
            android:text="@string/modify_pwd_s"
            android:textSize="@dimen/w36" />

        <Button
            android:id="@+id/change_user_bt"
            android:layout_width="@dimen/h300"
            android:layout_height="@dimen/w92"
            android:background="@drawable/wallet_btn_withdraw"
            android:gravity="center"
            android:padding="@dimen/w4"
            android:text="@string/change_user_s"
            android:textSize="@dimen/w36" />

        <Button
            android:id="@+id/exit_bt"
            android:layout_width="@dimen/h300"
            android:layout_height="@dimen/w92"
            android:background="@drawable/wallet_btn_withdraw"
            android:gravity="center"
            android:padding="@dimen/w4"
            android:text="@string/exit_s"
            android:textSize="@dimen/w36" />

    </LinearLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>