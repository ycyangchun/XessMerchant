<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <!-- textSize 16/40 = 0.40-->
    <!-- marginLeft 10/710 = 0.014-->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="2%">

        <TextView
            android:id="@+id/order_time_tv"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            app:layout_textSizePercent="40%" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:id="@+id/mobile_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        app:layout_marginLeftPercent="1.4%"
        app:layout_textSizePercent="40%" />

    <TextView
        android:id="@+id/lottery_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_marginLeftPercent="1.4%"
        app:layout_textSizePercent="40%" />

    <TextView
        android:id="@+id/issue_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        app:layout_marginLeftPercent="1.4%"
        app:layout_textSizePercent="40%" />

    <TextView
        android:id="@+id/num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_marginLeftPercent="1.4%"
        app:layout_textSizePercent="40%" />

    <TextView
        android:id="@+id/bet_kidney_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        app:layout_marginLeftPercent="1.4%"
        app:layout_textSizePercent="40%" />

    <TextView
        android:id="@+id/bet_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        app:layout_marginLeftPercent="1.4%"
        app:layout_textSizePercent="40%" />

    <TextView
        android:id="@+id/detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_marginLeftPercent="1.4%"
        app:layout_textSizePercent="40%" />

    <TextView
        android:id="@+id/option_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        app:layout_marginLeftPercent="1.4%"
        app:layout_textSizePercent="40%" />

</com.zhy.android.percent.support.PercentLinearLayout>