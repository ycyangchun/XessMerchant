<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--               width  height-->
    <!--percent         960 X 540 -->

    <!--height  86/540 = 0.159-->
    <View
        android:layout_width="match_parent"
        android:background="@drawable/bg_main_top"
        android:layout_height="86dp"
        app:layout_heightPercent="15.9%"/>
        
    
    <!--width  405/960 = 0.086-->
    <!--height  86/540 = 0.159-->

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/title_ll"
        android:layout_width="216dp"
        android:layout_height="86dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        app:layout_heightPercent="15.9%"
        app:layout_marginRightPercent="7.2%"
        app:layout_widthPercent="40%">

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tl_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="5dp"
            tl:tl_iconVisible="false"
            tl:tl_indicator_color="#eeeeee"
            tl:tl_indicator_corner_radius="3dp"
            tl:tl_indicator_height="5dp"
            tl:tl_indicator_style="TRIANGLE"
            tl:tl_indicator_width="20dp"
            tl:tl_textSelectColor="#fff"
            tl:tl_textUnselectColor="#9487B2"
            tl:tl_textsize="@dimen/w36" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <!--         880 X 405 -->
    <!--width  880/960 = 0.9166-->
    <!--height  405/540 = 0.75-->
    <!--margin 38/880 = 0.043-->
    <View
        android:layout_marginTop="2dp"
        android:layout_width="880dp"
        android:layout_height="405dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_ll"
        android:background="@drawable/bg_border"
        app:layout_heightPercent="74%"
        app:layout_marginLeftPercent="4.4%"
        app:layout_marginRightPercent="4.34%"
        app:layout_widthPercent="90.6%"/>
    <!--         880 X 405 -->
    <!--width  885/960 = 0.921-->
    <!--height  410/540 = 0.759-->
    <!--margin 33/880 = 0.0375-->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="885dp"
        android:layout_height="410dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_ll"
        app:layout_heightPercent="75.9%"
        app:layout_marginLeftPercent="3.75%"
        app:layout_marginRightPercent="3.75%"
        app:layout_widthPercent="92.1%">

        <android.support.v4.view.ViewPager
            android:id="@+id/content_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>